            <TextBox Grid.Row="2" HorizontalAlignment="Left" Width="290" AcceptsReturn="True" Style="{StaticResource ModernTextbox}"></TextBox>-->

            
            <Grid Grid.Row="1">
                <Border CornerRadius="10" Background="{StaticResource StaticChatBackGrd}">
                    <Border.Effect>
