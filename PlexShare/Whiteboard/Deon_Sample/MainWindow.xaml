<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="MyCanvas" Height="450" Width="800">
    <Canvas Name="myCanvas" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove" MouseUp="Canvas_MouseUp">
        <Button x:Name="rectangle" Click="draw_shape" Content="Rectangle" Height="26" Canvas.Left="631" Canvas.Top="89" Width="82" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.481,1.26"/>
        <Button x:Name="circle" Click="draw_shape" Content="Circle" Height="26" Canvas.Left="631" Canvas.Top="147" Width="82" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="Clear" Click="clear_click" Canvas.Left="631" Canvas.Top="217" HorizontalAlignment="Center" Height="25" VerticalAlignment="Top" Width="82"/>
        <Button x:Name="brush" Click="draw_shape" Content="Brush" Canvas.Left="631" Canvas.Top="281" Height="33" Width="82"/>
    </Canvas>
</Window>
